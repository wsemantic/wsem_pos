<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//t[@t-foreach='receipt.orderlines']" position="inside">
            <t t-if="'regalo' in line.product_name_wrapped[0].lower()">
                <t t-set="loyalty_card" t-value="env['loyalty.card'].search([('order_id', '=', line.order_id.id)], limit=1)"/>
                <t t-if="loyalty_card">
                    <div class="pos-receipt-loyalty-card">
                        <span>Loyalty Card Code:</span>
                        <t t-esc="loyalty_card.code"/>
                    </div>
                </t>
            </t>
        </xpath>
    </t>
</templates>